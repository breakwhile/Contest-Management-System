<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="cn.edu.xmut.MyContest.model.Contestant" table="contestant" dynamic-update="true">
        <id name="id" type="java.lang.Integer">
            <column name="id" />
            <generator class="native" />
        </id>
        <property name="number" type="java.lang.String">
            <column name="number" length="32" />
        </property>
        <property name="username" type="java.lang.String">
            <column name="username" length="32" />
        </property>
        <property name="password" type="java.lang.String">
            <column name="password" length="32">                
            </column>
        </property> 
        
        <property name="gender" type="java.lang.String">
            <column name="gender" length="4">                
            </column>
        </property>
        <property name="grade" type="java.lang.String">
            <column name="grade" length="32">                
            </column>
        </property>
        <property name="major" type="java.lang.String">
            <column name="major" length="32">                
            </column>
        </property>         
     
                 
    </class>
</hibernate-mapping>

