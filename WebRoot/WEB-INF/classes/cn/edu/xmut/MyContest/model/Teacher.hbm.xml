<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="cn.edu.xmut.MyContest.model.Teacher" table="teacher"
		dynamic-update="true">
		<id name="id" type="java.lang.Integer">
			<column name="id" />
			<generator class="native" />
		</id>
		<property name="teacherno" type="java.lang.String">
			<column name="teacherno" length="32" />
		</property>
		<property name="password" type="java.lang.String">
			<column name="password" length="32" />
		</property>
		<property name="teachername" type="java.lang.String">
			<column name="teachername" length="16" />
		</property>
		<property name="profession" type="java.lang.String">
			<column name="profession" length="16" />
		</property>
		<property name="phone" type="java.lang.String">
			<column name="phone" length="16" />
		</property>
		<property name="level" type="java.lang.String">
			<column name="level" length="4" />
		</property>
		<property name="note" type="java.lang.String">
			<column name="note" length="10" />
		</property>

	</class>
</hibernate-mapping>

